{
    "require": {
        "easyswoole/easyswoole": "3.4.x",
        "easyswoole/orm": "dev-master",
        "easyswoole/swoole-ide-helper": "^1.3",
        "easyswoole/phpunit": "^1.1",
        "easyswoole/http-annotation": "^2.2"
    },

    "autoload": {
        "psr-4": {
            "App\\": "App/",
            "Tests\\": "tests/"
        },
        "files": ["App/Common/functions.php"]
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "php-cs-fixer": "php-cs-fixer --rules=@PSR12"
    }

}
